    <AnchorPane fx:id="registrationBlock" layoutX="500.0" layoutY="60.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="520.0" prefWidth="440.0" stylesheets="@css/registration_style.css">
        <children>
            <TextField fx:id="NameField" layoutX="31.0" layoutY="30.0" promptText="Введите имя">
            <opaqueInsets>
               <Insets />
            </opaqueInsets></TextField>
            <TextField fx:id="lastNameField" layoutX="31.0" layoutY="85.0" promptText="Введите фамилию" />
